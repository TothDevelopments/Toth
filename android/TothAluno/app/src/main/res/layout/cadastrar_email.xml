<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@android:style/Widget.DeviceDefault.Light.ScrollView"
    android:fillViewport="true"
    android:screenOrientation="portrait" >

    <android.support.constraint.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackgroundLogin"
        android:focusable="true"
        android:focusableInTouchMode="true" >


        <ImageView
            app:srcCompat="@mipmap/ic_account_circle_white_48dp"
            android:id="@+id/imageViewFotoPerfil"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_width="160dp"
            android:layout_height="160dp" />

        <ImageView
            app:srcCompat="@drawable/input_person"
            android:id="@+id/imageViewNome"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewAluno" />

        <ImageView
            android:layout_width="270dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/input_email"
            android:id="@+id/imageViewEmailEsqueci"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageViewNome" />

        <ImageView
            android:layout_width="270dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/input_senha"
            android:id="@+id/imageViewSenhaCadastro"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageViewEmailEsqueci"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp" />

        <TextView
            android:text="Aluno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewAluno"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageViewFotoPerfil"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <EditText
            android:layout_height="50dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/editTextNome"
            android:background="@android:color/transparent"
            android:hint="Nome"
            android:textColor="@android:color/white"
            android:textColorHint="?attr/colorButtonNormal"
            android:layout_width="160dp"
            app:layout_constraintTop_toTopOf="@+id/imageViewNome"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewNome"
            app:layout_constraintRight_toRightOf="@+id/imageViewNome"
            android:layout_marginEnd="35dp"
            android:layout_marginRight="35dp" />

        <EditText
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editTextEmail"
            android:background="@android:color/transparent"
            android:hint="E-mail"
            android:textColorHint="?attr/colorButtonNormal"
            android:textColor="@android:color/white"
            android:textColorLink="@android:color/white"
            android:layout_width="160dp"
            app:layout_constraintTop_toTopOf="@+id/imageViewEmailEsqueci"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewEmailEsqueci"
            app:layout_constraintRight_toRightOf="@+id/imageViewEmailEsqueci"
            android:layout_marginEnd="35dp"
            android:layout_marginRight="35dp" />

        <EditText
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editTextSenha"
            android:background="@android:color/transparent"
            android:hint="Senha"
            android:textColor="@android:color/white"
            android:textColorHint="?attr/colorButtonNormal"
            android:layout_width="160dp"
            app:layout_constraintTop_toTopOf="@+id/imageViewSenhaCadastro"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewSenhaCadastro"
            app:layout_constraintRight_toRightOf="@+id/imageViewSenhaCadastro"
            android:layout_marginEnd="35dp"
            android:layout_marginRight="35dp" />

        <Button
            android:text="Cadastrar"
            android:layout_height="50dp"
            android:id="@+id/buttonCadastrar"
            android:layout_width="230dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageViewSenhaCadastro"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="32dp"
            android:onClick="Toast" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>