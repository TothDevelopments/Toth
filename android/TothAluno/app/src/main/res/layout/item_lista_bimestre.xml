<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="1" >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:paddingTop="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/layout_item_titulo_bimestre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bimestre."
                android:textColor="#212121"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/layout_item_subtitulo_bimestre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_item_titulo_bimestre"
                android:text="Bimestre."
                android:textSize="13sp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="#ECECEC">

            </RelativeLayout>


        </RelativeLayout>

        <ImageView
            android:id="@+id/imageViewBimestre"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="5dp"
            card_view:srcCompat="@drawable/botao_gmail" />


    </RelativeLayout>


</LinearLayout>