<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@android:style/Widget.DeviceDefault.Light.ScrollView"
    android:fillViewport="true"
    android:screenOrientation="portrait" >

        <android.support.constraint.ConstraintLayout
            xmlns:tools="http://schemas.android.com/tools"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackgroundLogin"
            android:focusable="true"
            android:focusableInTouchMode="true" >

                <ImageView
                    app:srcCompat="@drawable/toth_imagem_login"
                    android:id="@+id/imageView"
                    android:layout_height="100dp"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="16dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="16dp"
                    android:layout_width="250dp" />

                <Button
                    android:text="Entrar com Google"
                    android:id="@+id/buttonLoginGoogle"
                    android:background="@drawable/botao_gmail"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_marginStart="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/buttonLoginFacebok"
                    android:textSize="14sp"
                    android:onClick="entrarGoogle"
                    android:layout_width="270dp"
                    android:layout_height="50dp"
                    android:textColor="@android:color/white" />

                <Button
                    android:text="Entrar com Facebook"
                    android:id="@+id/buttonLoginFacebok"
                    android:background="@drawable/botao_facebook"
                    android:layout_marginStart="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@+id/imageView"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:textSize="14sp"
                    android:onClick="entrarFacebook"
                    android:layout_width="270dp"
                    android:layout_height="50dp"
                    android:textColor="@android:color/white" />

                <TextView
                    android:text="OU"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/background_light"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/buttonLoginGoogle"
                    android:layout_marginStart="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="16dp"
                    android:id="@+id/textViewOu" />

                <ImageView
                    app:srcCompat="@drawable/input_login"
                    android:id="@+id/imageViewInputEmail"
                    android:layout_marginStart="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textViewOu"
                    android:layout_height="50dp"
                    android:layout_width="270dp" />

                <ImageView
                    app:srcCompat="@drawable/input_login"
                    android:id="@+id/imageViewInputSenha"
                    android:layout_width="270dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/imageViewInputEmail"
                    android:layout_marginStart="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="16dp"
                    android:layout_height="50dp"/>



                <Button
                    android:text="Entrar"
                    android:layout_height="50dp"
                    android:id="@+id/buttonEntrar"
                    android:layout_marginStart="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/imageViewInputSenha"
                    android:onClick="Toast"
                    android:background="@drawable/botao_branco"
                    android:layout_width="270dp"
                    android:textColor="@android:color/black" />



                <EditText
                    android:layout_height="50dp"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/editTextEmail"
                    app:layout_constraintBottom_toBottomOf="@+id/imageViewInputEmail"
                    app:layout_constraintTop_toTopOf="@+id/imageViewInputEmail"
                    app:layout_constraintRight_toRightOf="@+id/imageViewInputEmail"
                    android:layout_marginEnd="24dp"
                    android:layout_marginRight="24dp"
                    android:background="@android:color/transparent"
                    android:hint="E-mail"
                    android:textColorHint="?attr/colorAccent"
                    android:textColor="@android:color/white"
                    android:textColorLink="@android:color/white"
                    app:layout_constraintLeft_toRightOf="@+id/imageViewIconeEmail"
                    android:layout_width="200dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginLeft="24dp" />

                <EditText
                    android:layout_height="50dp"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/editTextSenha"
                    app:layout_constraintTop_toTopOf="@+id/imageViewInputSenha"
                    app:layout_constraintBottom_toBottomOf="@+id/imageViewInputSenha"
                    app:layout_constraintRight_toRightOf="@+id/imageViewInputSenha"
                    android:layout_marginEnd="24dp"
                    android:layout_marginRight="24dp"
                    android:background="@android:color/transparent"
                    android:hint="Senha"
                    android:textColor="@android:color/white"
                    android:textColorHint="?attr/colorAccent"
                    android:layout_marginStart="24dp"
                    app:layout_constraintLeft_toRightOf="@+id/imageViewIconeSenha"
                    android:layout_marginLeft="24dp"
                    android:layout_width="200dp" />

                <Space
                    android:layout_width="350dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="16dp"
                    android:id="@+id/space"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/buttonEntrar"
                    android:layout_height="100dp" />

                <Button
                    android:text="Cadastrar com e-mail"
                    android:layout_width="wrap_content"
                    android:id="@+id/buttonCadastrarEmail"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:textSize="@dimen/subbotao"
                    android:onClick="abrirCadastrarEmail"
                    android:textColor="@android:color/white"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="@+id/space"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    app:layout_constraintTop_toTopOf="@+id/space" />

                <Button
                    android:text="Esqueci a senha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonEsqueciSenha"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:onClick="abrirEsqueciSenha"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/subbotao"
                    app:layout_constraintTop_toTopOf="@+id/space"
                    app:layout_constraintRight_toRightOf="@+id/space"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/icon_email"
                    android:id="@+id/imageViewIconeEmail"
                    app:layout_constraintTop_toTopOf="@+id/imageViewInputEmail"
                    app:layout_constraintBottom_toBottomOf="@+id/imageViewInputEmail"
                    app:layout_constraintLeft_toLeftOf="@+id/imageViewInputEmail"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/icon_lock"
                    android:id="@+id/imageViewIconeSenha"
                    app:layout_constraintTop_toTopOf="@+id/imageViewInputSenha"
                    app:layout_constraintBottom_toBottomOf="@+id/imageViewInputSenha"
                    app:layout_constraintLeft_toLeftOf="@+id/imageViewInputSenha"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp" />

                <ImageView
                    app:srcCompat="@drawable/icon_facebook"
                    android:id="@+id/imageViewIconeFacebook"
                    android:elevation="2dp"
                    app:layout_constraintBottom_toBottomOf="@+id/buttonLoginFacebok"
                    app:layout_constraintTop_toTopOf="@+id/buttonLoginFacebok"
                    app:layout_constraintLeft_toLeftOf="@+id/buttonLoginFacebok"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/icon_google"
                    android:id="@+id/imageViewIconeGoogle"
                    android:elevation="2dp"
                    app:layout_constraintTop_toTopOf="@+id/buttonLoginGoogle"
                    app:layout_constraintBottom_toBottomOf="@+id/buttonLoginGoogle"
                    app:layout_constraintLeft_toLeftOf="@+id/buttonLoginGoogle"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp" />




        </android.support.constraint.ConstraintLayout>
</ScrollView>