<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:layout_width="match_parent"
            app:srcCompat="@drawable/toth_imagem_login"
            android:id="@+id/imageViewLogo"
            android:layout_height="50dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:paddingTop="16dp">

            <Button
                android:text="Entrar com Facebook"
                android:layout_height="wrap_content"
                android:id="@+id/buttonEntrarFacebook"
                android:background="@drawable/botao_facebook"
                android:textColor="#fff"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_width="260dp" />

            <ImageView
                android:layout_height="50dp"
                app:srcCompat="@drawable/icon_facebook"
                android:id="@+id/imageView4"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:elevation="2dp"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/buttonEntrarFacebook"
                android:layout_alignStart="@+id/buttonEntrarFacebook"
                android:layout_width="10dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:paddingTop="16dp">

            <Button
                android:text="Entrar com Google"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:id="@+id/buttonEntrarGoogle"
                android:background="@drawable/botao_gmail"
                android:textColor="#fff"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_height="50dp"
                android:elevation="2dp"
                app:srcCompat="@drawable/icon_google"
                android:id="@+id/imageView5"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/buttonEntrarGoogle"
                android:layout_alignStart="@+id/buttonEntrarGoogle"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_width="25dp" />
        </RelativeLayout>

        <TextView
            android:text="OU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:gravity="center"
            android:paddingTop="16dp"
            android:textColor="#fff"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingTop="16dp">

            <ImageView
                android:layout_width="260dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/input_login"
                android:id="@+id/imageViewInputEmail" />

            <ImageView
                app:srcCompat="@drawable/icon_email"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:id="@+id/imageViewIconEmail"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/imageViewInputEmail"
                android:layout_alignStart="@+id/imageViewInputEmail"
                android:layout_width="25dp" />

            <TextView
                android:text="TextView"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageViewIconEmail"
                android:layout_toEndOf="@+id/imageViewIconEmail"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:id="@+id/textView2"
                android:gravity="center_vertical"
                android:layout_width="200dp"
                android:textColor="#fff"/>
        </RelativeLayout>

    </LinearLayout>
</ScrollView>