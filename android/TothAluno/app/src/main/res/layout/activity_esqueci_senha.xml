<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@android:style/Widget.DeviceDefault.Light.ScrollView"
    android:fillViewport="true"
    android:screenOrientation="portrait"
    android:background="@color/colorBackgroundLogin"
    android:focusable="true"
    android:focusableInTouchMode="true" >


    <TextView
        android:text="Digite o seu e-mail cadastrado para te enviarmos um e-mail de recuperação."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewMensagemRecuperacao"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="10dp"
        android:textColor="@android:color/white"
        app:layout_constraintHorizontal_bias="0.0"
        android:gravity="center"/>

    <ImageView
        android:layout_width="270dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/input_login"
        android:id="@+id/imageViewEmailEsqueci"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewMensagemRecuperacao"
        android:layout_marginTop="24dp" />

    <EditText
        android:layout_height="50dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editTextEmail"
        android:background="@android:color/transparent"
        android:hint="E-mail"
        android:textColorHint="?attr/colorAccent"
        android:textColor="@android:color/white"
        android:textColorLink="@android:color/white"
        android:layout_width="200dp"
        app:layout_constraintLeft_toRightOf="@+id/imageViewIconeEmail"
        app:layout_constraintRight_toRightOf="@+id/imageViewEmailEsqueci"
        app:layout_constraintTop_toTopOf="@+id/imageViewEmailEsqueci"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewEmailEsqueci"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp" />

    <Button
        android:text="Recuperar"
        android:layout_height="50dp"
        android:id="@+id/buttonRecuperar"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/imageViewEmailEsqueci"
        android:onClick="Toast"
        android:background="@drawable/botao_branco"
        android:layout_width="270dp"
        android:textColor="@android:color/black" />

    <ImageView
        android:layout_height="30dp"
        app:srcCompat="@drawable/icon_email"
        android:id="@+id/imageViewIconeEmail"
        android:layout_width="30dp"
        app:layout_constraintTop_toTopOf="@+id/imageViewEmailEsqueci"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewEmailEsqueci"
        app:layout_constraintLeft_toLeftOf="@+id/imageViewEmailEsqueci"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp" />

</android.support.constraint.ConstraintLayout>