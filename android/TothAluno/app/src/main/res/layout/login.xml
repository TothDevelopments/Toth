<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@android:style/Widget.DeviceDefault.Light.ScrollView"
    android:fillViewport="true"
    android:screenOrientation="portrait" >

        <android.support.constraint.ConstraintLayout
            xmlns:tools="http://schemas.android.com/tools"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackgroundLogin"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:minHeight="155dp">


                <ImageView
                    app:srcCompat="@drawable/toth_imagem_login"
                    android:id="@+id/imageView"
                    android:layout_height="100dp"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="16dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="16dp"
                    android:layout_width="250dp" />

                <Button
                    android:text="Entrar com Google"
                    android:id="@+id/buttonLoginGoogle"
                    android:background="@drawable/botao_entrar_gmail"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_marginStart="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/buttonLoginFacebok"
                    android:layout_width="230dp"
                    android:textSize="10sp"
                    android:layout_height="48dp"
                    android:onClick="entrarGoogle" />

                <Button
                    android:text="Entrar com Facebook"
                    android:id="@+id/buttonLoginFacebok"
                    android:background="@drawable/botao_entrar_facebook"
                    android:layout_marginStart="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@+id/imageView"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="230dp"
                    android:textSize="10sp"
                    android:layout_height="48dp"
                    android:onClick="entrarFacebook" />

                <TextView
                    android:text="OU"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/background_light"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/buttonLoginGoogle"
                    android:layout_marginStart="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="16dp"
                    android:id="@+id/textViewOu" />

                <ImageView
                    app:srcCompat="@drawable/input_login"
                    android:id="@+id/imageViewInputEmail"
                    android:layout_marginStart="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textViewOu"
                    android:layout_height="50dp"
                    android:layout_width="270dp" />

                <ImageView
                    app:srcCompat="@drawable/input_login"
                    android:id="@+id/imageViewInputSenha"
                    android:layout_width="270dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/imageViewInputEmail"
                    android:layout_marginStart="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="16dp"
                    android:layout_height="50dp"/>



                <Button
                    android:text="Entrar"
                    android:layout_height="50dp"
                    android:id="@+id/buttonEntrar"
                    android:background="@drawable/botao_branco"
                    android:layout_marginStart="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/imageViewInputSenha"
                    android:layout_width="230dp"
                    android:onClick="Toast" />



                <EditText
                    android:layout_height="50dp"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/editTextEmail"
                    app:layout_constraintBottom_toBottomOf="@+id/imageViewInputEmail"
                    app:layout_constraintTop_toTopOf="@+id/imageViewInputEmail"
                    app:layout_constraintRight_toRightOf="@+id/imageViewInputEmail"
                    android:layout_marginEnd="35dp"
                    android:layout_marginRight="35dp"
                    android:background="@android:color/transparent"
                    android:hint="E-mail"
                    android:textColorHint="?attr/colorButtonNormal"
                    android:textColor="@android:color/white"
                    android:textColorLink="@android:color/white"
                    android:layout_width="160dp" />

                <EditText
                    android:layout_height="50dp"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/editTextSenha"
                    app:layout_constraintTop_toTopOf="@+id/imageViewInputSenha"
                    app:layout_constraintBottom_toBottomOf="@+id/imageViewInputSenha"
                    app:layout_constraintRight_toRightOf="@+id/imageViewInputSenha"
                    android:layout_marginEnd="35dp"
                    android:layout_marginRight="35dp"
                    android:background="@android:color/transparent"
                    android:hint="Senha"
                    android:textColor="@android:color/white"
                    android:textColorHint="?attr/colorButtonNormal"
                    android:layout_width="160dp" />

                <Button
                    android:text="Cadastrar com e-mail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonCadastrarEmail"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/buttonEntrar"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:textSize="@dimen/subbotao"
                    android:onClick="abrirCadastrarEmail"
                    android:textColor="@android:color/white"
                    android:layout_marginStart="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="8dp" />

                <Button
                    android:text="Esqueci a senha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonEsqueciSenha"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:onClick="abrirEsqueciSenha"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/subbotao"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/buttonEntrar"
                    android:layout_marginEnd="24dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="24dp" />


        </android.support.constraint.ConstraintLayout>
</ScrollView>