<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.tothprofessor.tothaluno">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"  >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LoginActivity"
            android:label="Login"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".CadastrarEmailActivity"
            android:screenOrientation="portrait"
            android:label="Cadastre-se"
            android:parentActivityName=".LoginActivity" />

        <activity
            android:name=".EsqueciSenhaActivity"
            android:screenOrientation="portrait"
            android:label="Esqueci a senha"
            android:parentActivityName=".EsqueciSenhaActivity" />


        <activity
            android:name=".ResumoAtividadeActivity"
            android:label="Atividade"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity" />


        <activity
            android:name=".NotificacoesActivity"
            android:label="Notificações"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".PesquisarNovoGrupoActivity"
            android:label="Encontrar novo grupo"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".ResultadoNovoGrupoActivity"
            android:label="Novo grupo"
            android:screenOrientation="portrait"
            android:parentActivityName=".PesquisarNovoGrupoActivity" />

        <activity
            android:name=".MeuBoletimActivity"
            android:label="Meu Boletim"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity" />

    </application>

</manifest>