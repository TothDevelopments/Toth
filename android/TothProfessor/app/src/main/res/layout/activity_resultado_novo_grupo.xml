<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true" >


        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:paddingTop="30dp"
            android:layout_height="wrap_content">

            <ImageView
                app:srcCompat="@drawable/botao_facebook"
                android:id="@+id/imageViewPerfilEscola"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:text='E.M.E.F. Profº "Fulano de Tal"'
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewNomeEscola"
                android:layout_below="@+id/imageViewPerfilEscola"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:textSize="18sp"
                android:textColor="#212121" />

            <TextView
                android:text="7º Ano A - Português"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewDisciplinaEscola"
                android:layout_below="@+id/textViewNomeEscola"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:textSize="14sp" />

            <TextView
                android:text="Prof. Bertano"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewNomeProfessor"
                android:layout_below="@+id/textViewDisciplinaEscola"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:paddingTop="30dp">

            <Button
                android:text="entrar no grupo"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:id="@+id/buttonConfirmarEntrarGrupo"
                android:background="@drawable/botao_linha_azul"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorPrimary" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>